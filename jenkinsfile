pipeline {
    agent any
    stages {
        stage('Container Kill'){
            steps {
                bash "docker rm -f $(docker ps -aq) || true"
            }
        stage('Build'){
            steps {
                sh "docker build -t umayrahmed/jenkinslab3 ."
            }
        stage('Run'){
            steps {
                sh "docker run  -d -p 80:5500 --name task1 task1"
            }
        }
    }
}
}
}
