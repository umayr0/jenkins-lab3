pipeline {
    agent any
    
    stages {
        stage('Container Kill'){
            steps {
                sh 'docker rm -f $(docker ps -aq) || true'
            }
        }
        stage('Build'){
            steps {
                sh 'docker build -t jenkinslab3 .'
            }
        }
        stage('Build'){
            steps {
                sh 'docker run -d -p 80:5500 jenkinslab3'
            }
        }
    }
}
